<%= form_with model: @group do |form| %>
  <p id="alert"> <%= alert %> </p>
  <%= form.text_field :name, placeholder: 'Name', class: 'name-input' %>

  <div class="icons-field">
    <%= form.label 'Please select the group icon:', class: 'icon-title' %>
    <% @icons.each do |icon| %>
      <label>
        <%= form.radio_button(:icon, icon, class: 'icon-select') %>
        <%= image_tag(icon, class: 'icon') %>
      </label>
    <% end %>
  </div>

  <%= form.submit 'Save', class: 'action-btn' %>
<% end %>