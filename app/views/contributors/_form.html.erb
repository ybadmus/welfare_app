<%= form_with model: @contributor do |form| %>
  
  <p id="alert"> <%= alert %> </p>

  <%= form.text_field :contributor_no, placeholder: 'Welfare No.', class: 'name-input' %>

  <%= form.text_field :name, placeholder: 'Full name', class: 'name-input' %>

  <%= form.text_field :phonenumber, placeholder: 'Phone number', class: 'name-input' %>

  <div class="icons-field">
    <%= form.label 'Please select your profile icon:', class: 'icon-title' %>

    <% @icons.each do |icon| %>
      <label>
        <%= form.radio_button(:icon, icon, class: 'icon-select') %>
        <%= image_tag(icon, class: 'icon') %>
      </label>
    <% end %>
    
  </div>

  <%= button_to "Create contributor", contributors_path, method: :post, class: 'save-btn' %>
<% end %>